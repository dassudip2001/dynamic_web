generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// hero
model Hero {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  
  // relationships
  services    Service[]
  works       Work[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// services
model Service {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  image_url   String?
  hero        Hero     @relation(fields: [heroId], references: [id])
  heroId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// work
model Work {
  id          Int      @id @default(autoincrement())
  title       String
  subtitle    String?
  description String?
  image_url   String?
  hero        Hero     @relation(fields: [heroId], references: [id])
  heroId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// contact us

model Contact {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phone       String
  message     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
